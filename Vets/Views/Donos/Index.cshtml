@model IEnumerable<Vets.Models.Donos>

@{
    ViewBag.Title = "Index";
}

<h2>Tabela Donos</h2>


@if (User.IsInRole("Funcionario"))
{
    @Html.ActionLink("Criar o Novo Dono", "Criar")
}

<table border="1">
    <tr style="background-color:#00ff90;">
        <th>
            @Html.DisplayNameFor(model => model.DonoID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NIF)
        </th>
        <th>Opções dos Administradores</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DonoID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NIF)
        </td>
        <td>
            @if (User.IsInRole("Funcionario"))
            {
                <div>
                    @Html.ActionLink("Editar", "Editar", new { id = item.DonoID }) |
                    @Html.ActionLink("Detalhes", "Detalhes", new { id = item.DonoID }) |
                    @Html.ActionLink("Apagar", "Apagar", new { id = item.DonoID })
                </div>
            }
           
        </td>
    </tr>
}

</table>
