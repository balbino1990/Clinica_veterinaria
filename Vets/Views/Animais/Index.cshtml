@model IEnumerable<Vets.Models.Animais>

@{
    ViewBag.Title = "Index";
}

<h2>Animais</h2>

<p>
    @Html.ActionLink("Criar Novo Animal", "criar")
</p>
<table border="1">
    <tr style="background-color:#00ff90;">
        <th>
            @Html.DisplayNameFor(model => model.AnimalID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Especie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Raca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Peso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Altura)
        </th>
        <th>Opções para gerar</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AnimalID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Especie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Raca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Peso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Altura)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.AnimalID }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.AnimalID }) |
            @Html.ActionLink("Apagar", "Apagar", new { id=item.AnimalID })
        </td>
    </tr>
}

</table>
